@using MusicStore.MVC.Controllers
@using MusicStore.MVC.Models
@model IEnumerable<MusicStore.MVC.Models.SongSet>

@{
    ViewBag.Title = "Listado SongSet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- breadcrumb -->
<div id="breadcrumb">
    <ul class="breadcrumb">
        <li><i class="fa fa-home"></i><a href="@Url.Action("Index", "Admin")"> Inicio</a></li>
        <li>Registro SongSet</li>
        <li class="active">Listado SongSet</li>
    </ul>
</div>

<!-- Titulo de página -->
<div class="main-header clearfix">
    <div class="page-title">
        <h3 class="no-margin">
            <i class="fa fa-users fa-sm"></i>&nbsp; Listado Canciones - @ViewBag.AlbumSet
        </h3>
    </div>
</div>

<div class="padding-md">
    <div class="row">

        <!-- Contenido -->
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading clearfix">
                    <ul class="tool-bar">

                        <li><a href="@Url.Action("Create", "SongSet")" data-toggle="tooltip" data-placement="bottom" title="Registrar Nuevo SongSet" data-original-title="Registrar Nueva Canción"><i class="fa fa-user"></i>&nbsp; Registrar Nueva Canción</a></li>

                        <li><a href="#" class="refresh-widget" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="Actualizar"><i class="fa fa-refresh"></i></a></li>
                        <li><a href="#aportes" data-toggle="collapse"><i class="fa fa-arrows-v"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body collapse in" id="">
                    <!-- body -->

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="responsiveTable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            <a id="btnedit" href="@Url.Action("Edit", "SongSet", new {id = item.Id})" class="btn btn-default animated-bar">
                                                <i class="fa fa-edit"></i>&nbsp;Editar
                                            </a>
                                        </td>
                                        <td>
                                            <a id="btnedit" href="@Url.Action("Details", "SongSet", new {id = item.Id})" class="btn btn-default animated-bar">
                                                <i class="fa fa-list"></i>&nbsp;Detalle
                                            </a>
                                        </td>
                                        <td>
                                            <a id="btnedit" href="@Url.Action("Delete", "SongSet", new {id = item.Id})" class="btn btn-default animated-bar">
                                                <i class="fa fa-trash-o"></i>&nbsp;Eliminar
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>

                    <!-- /body -->
                </div>
                <div class="loading-overlay">
                    <i class="loading-icon fa fa-refresh fa-spin fa-lg"></i>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        var table = $('#responsiveTable').DataTable({
            buttons: {
                name: 'primary',
                buttons: ['copy', 'excel', 'csv', 'pdf', 'print', 'colvis']
            }
        });
        table.buttons().container()
            .insertBefore('#responsiveTable_filter');
    });
</script>
